{{> header }}

<main class="page">
  <h1> Contacts </h1>

  {{#if contacts}}
    <ul>
      {{#each contacts}}
        <li>
          {{this.firstName}} {{this.lastName}} <a href="/contact/remove/{{this.id}}">Remove contact</a>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <div> No contacts. </div>
  {{/if}}
</main>
