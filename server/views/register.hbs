<main class="page-card-container">
  <h1 class="page-card-title"> Welcome to registration page </h1>

  <form action="/register" class="page-card form" method="post">

    <div class="errors">
      {{errors.message}}
    </div>

    <label class="form-label">
      <span> Email: </span>
      <input type="text" class="js-email" name="email" value="{{fields.email}}"/>
      <div class="errors">
         {{errors.errors.email.message}}
      </div>
    </label>

    <label class="form-label">
      <span> Password: </span>
      <input type="password" class="js-password" name="password" value="{{fields.password}}"/>
       <div class="errors">
         {{errors.errors.password.message}}
       </div>
    </label>

    <label class="form-label">
      <span> First name: </span>
      <input type="text" class="js-first-name" name="firstName" value="{{fields.firstName}}"/>
      <div class="errors">
         {{errors.errors.firstName.message}}
      </div>
    </label>

    <label class="form-label">
      <span> Last name: </span>
      <input type="text" class="js-last-name" name="lastName" value="{{fields.lastName}}"/>
      <div class="errors">
         {{errors.errors.lastName.message}}
      </div>
    </label>

    <label class="form-label">
      <span> Date of birth: </span>
      <input type="date" class="js-date-of-birth" name="dateOfBirth" value="{{fields.dateOfBirth}}"/>
      <div class="errors">
         {{errors.errors.dateOfBirth.message}}
      </div>
    </label>

    <input class="form-submit" type="submit" value="Submit" />
  </form>
</main>
